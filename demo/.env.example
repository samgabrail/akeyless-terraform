# Environment Variables for Akeyless Terraform Demo
# Copy this file to .env and fill in your actual values
# These can be used as an alternative to terraform.tfvars files

# Part 1: Akeyless Setup Environment Variables
export TF_VAR_akeyless_gateway_address="https://api.akeyless.io"
export TF_VAR_aws_iam_access_id="your-aws-iam-access-id-from-akeyless"
export TF_VAR_aws_access_key_id="AKIA..."
export TF_VAR_aws_secret_access_key="your-secret-key"
export TF_VAR_aws_region="us-west-2"

# Part 2: Infrastructure Deployment Environment Variables
export TF_VAR_akeyless_access_id="your-akeyless-access-id"
export TF_VAR_akeyless_access_key="your-akeyless-access-key"

# Usage:
# source .env
# cd part1-akeyless-setup && terraform plan
# cd ../part2-infrastructure-deployment && terraform plan